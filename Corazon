<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Corazón Animado Interactivo</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(45deg, #ff6b6b, #ee5a6f, #ff8e8e, #ff6b9d);
            background-size: 400% 400%;
            animation: gradientShift 8s ease infinite;
            font-family: 'Arial', sans-serif;
            overflow: hidden;
            height: 100vh;
            cursor: none;
        }

        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            position: relative;
        }

        .heart {
            width: 200px;
            height: 180px;
            position: relative;
            cursor: pointer;
            transform-origin: center;
            transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

        .heart:before,
        .heart:after {
            content: '';
            width: 100px;
            height: 160px;
            position: absolute;
            left: 100px;
            transform: rotate(-45deg);
            transform-origin: 0 100%;
            border-radius: 100px 100px 0 0;
            background: linear-gradient(135deg, #ff3838, #ff6b6b, #ff8787);
            box-shadow: 0 0 30px rgba(255, 56, 56, 0.6);
            transition: all 0.3s ease;
        }

        .heart:after {
            left: 0;
            transform: rotate(45deg);
            transform-origin: 100% 100%;
        }

        .heart.open {
            transform: scale(1.3) rotate(10deg);
        }

        .heart.open:before,
        .heart.open:after {
            background: linear-gradient(135deg, #ff1744, #ff5722, #ff8a65);
            box-shadow: 0 0 50px rgba(255, 23, 68, 0.8);
        }

        .heart.closed {
            transform: scale(0.8) rotate(-5deg);
        }

        .heart.closed:before,
        .heart.closed:after {
            background: linear-gradient(135deg, #880e4f, #ad1457, #c2185b);
            box-shadow: 0 0 20px rgba(136, 14, 79, 0.4);
        }

        .particles {
            position: absolute;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .particle {
            position: absolute;
            width: 8px;
            height: 8px;
            background: #ff4081;
            border-radius: 50%;
            pointer-events: none;
            opacity: 0;
        }

        .sparkle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: white;
            border-radius: 50%;
            pointer-events: none;
            animation: sparkle 2s ease-in-out infinite;
        }

        @keyframes sparkle {
            0%, 100% { opacity: 0; transform: scale(0); }
            50% { opacity: 1; transform: scale(1); }
        }

        @keyframes particleFloat {
            0% {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
            100% {
                opacity: 0;
                transform: translateY(-100px) scale(0.5);
            }
        }

        .message {
            position: absolute;
            top: 80%;
            left: 50%;
            transform: translateX(-50%);
            color: white;
            font-size: 24px;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            opacity: 0;
            transition: opacity 0.5s ease;
            text-align: center;
        }

        .message.show {
            opacity: 1;
        }

        .floating-hearts {
            position: absolute;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
        }

        .floating-heart {
            position: absolute;
            font-size: 20px;
            color: rgba(255, 255, 255, 0.7);
            animation: float 6s linear infinite;
            pointer-events: none;
        }

        @keyframes float {
            0% {
                opacity: 0;
                transform: translateY(100vh) rotate(0deg);
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                opacity: 0;
                transform: translateY(-100px) rotate(360deg);
            }
        }

        .pulse-ring {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 300px;
            height: 300px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            animation: pulse 2s ease-in-out infinite;
            pointer-events: none;
        }

        @keyframes pulse {
            0% {
                transform: translate(-50%, -50%) scale(0.8);
                opacity: 1;
            }
            100% {
                transform: translate(-50%, -50%) scale(1.2);
                opacity: 0;
            }
        }
    </style>
</head>
<body>
    <div class="floating-hearts" id="floatingHearts"></div>
    
    <div class="container">
        <div class="pulse-ring"></div>
        <div class="heart" id="heart"></div>
        <div class="particles" id="particles"></div>
    </div>

    <div class="message" id="message">
        Mueve el mouse para hacer latir el corazón ❤
    </div>

    <script>
        const heart = document.getElementById('heart');
        const particles = document.getElementById('particles');
        const message = document.getElementById('message');
        const floatingHearts = document.getElementById('floatingHearts');

        let mouseX = 0;
        let mouseY = 0;
        let lastMouseX = 0;
        let lastMouseY = 0;
        let isMoving = false;
        let moveTimeout;

        // Mostrar mensaje inicial
        setTimeout(() => {
            message.classList.add('show');
            setTimeout(() => {
                message.classList.remove('show');
            }, 3000);
        }, 1000);

        // Seguimiento del mouse
        document.addEventListener('mousemove', (e) => {
            mouseX = e.clientX;
            mouseY = e.clientY;
            
            // Detectar si el mouse se está moviendo
            const deltaX = Math.abs(mouseX - lastMouseX);
            const deltaY = Math.abs(mouseY - lastMouseY);
            
            if (deltaX > 2 || deltaY > 2) {
                isMoving = true;
                heart.classList.remove('closed');
                heart.classList.add('open');
                
                // Crear partículas
                createParticles(mouseX, mouseY);
                
                // Crear chispas alrededor del corazón
                createSparkles();
                
                clearTimeout(moveTimeout);
                moveTimeout = setTimeout(() => {
                    isMoving = false;
                    heart.classList.remove('open');
                    heart.classList.add('closed');
                }, 500);
            }
            
            lastMouseX = mouseX;
            lastMouseY = mouseY;
        });

        // Crear partículas que siguen al mouse
        function createParticles(x, y) {
            for (let i = 0; i < 3; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = (x + Math.random() * 20 - 10) + 'px';
                particle.style.top = (y + Math.random() * 20 - 10) + 'px';
                particle.style.animation = 'particleFloat 1s ease-out forwards';
                
                particles.appendChild(particle);
                
                setTimeout(() => {
                    particle.remove();
                }, 1000);
            }
        }

        // Crear chispas alrededor del corazón
        function createSparkles() {
            const heartRect = heart.getBoundingClientRect();
            const centerX = heartRect.left + heartRect.width / 2;
            const centerY = heartRect.top + heartRect.height / 2;
            
            for (let i = 0; i < 5; i++) {
                const sparkle = document.createElement('div');
                sparkle.className = 'sparkle';
                
                const angle = (i / 5) * Math.PI * 2;
                const radius = 80 + Math.random() * 40;
                const x = centerX + Math.cos(angle) * radius;
                const y = centerY + Math.sin(angle) * radius;
                
                sparkle.style.left = x + 'px';
                sparkle.style.top = y + 'px';
                sparkle.style.animationDelay = Math.random() * 2 + 's';
                
                particles.appendChild(sparkle);
                
                setTimeout(() => {
                    sparkle.remove();
                }, 2000);
            }
        }

        // Crear corazones flotantes
        function createFloatingHeart() {
            const floatingHeart = document.createElement('div');
            floatingHeart.className = 'floating-heart';
            floatingHeart.innerHTML = '❤';
            floatingHeart.style.left = Math.random() * 100 + '%';
            floatingHeart.style.animationDuration = (Math.random() * 3 + 4) + 's';
            floatingHeart.style.fontSize = (Math.random() * 10 + 15) + 'px';
            
            floatingHearts.appendChild(floatingHeart);
            
            setTimeout(() => {
                floatingHeart.remove();
            }, 7000);
        }

        // Crear corazones flotantes periódicamente
        setInterval(createFloatingHeart, 2000);

        // Animación de latido del corazón
        function heartbeat() {
            if (!isMoving) {
                heart.style.transform = 'scale(1.1)';
                setTimeout(() => {
                    if (!isMoving) {
                        heart.style.transform = 'scale(1)';
                    }
                }, 300);
            }
        }

        // Latido constante cada 1.5 segundos
        setInterval(heartbeat, 1500);

        // Efectos para dispositivos táctiles
        document.addEventListener('touchmove', (e) => {
            e.preventDefault();
            const touch = e.touches[0];
            mouseX = touch.clientX;
            mouseY = touch.clientY;
            
            isMoving = true;
            heart.classList.remove('closed');
            heart.classList.add('open');
            
            createParticles(mouseX, mouseY);
            createSparkles();
            
            clearTimeout(moveTimeout);
            moveTimeout = setTimeout(() => {
                isMoving = false;
                heart.classList.remove('open');
                heart.classList.add('closed');
            }, 500);
        });

        // Click en el corazón para efecto especial
        heart.addEventListener('click', () => {
            heart.style.animation = 'none';
            heart.style.transform = 'scale(1.5) rotate(360deg)';
            
            // Exploción de partículas
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    createParticles(
                        window.innerWidth / 2 + Math.random() * 200 - 100,
                        window.innerHeight / 2 + Math.random() * 200 - 100
                    );
                }, i * 50);
            }
            
            setTimeout(() => {
                heart.style.animation = '';
                heart.style.transform = '';
            }, 1000);
        });
    </script>
</body>
</html>
